<!-- Contains all sections which will be same in all views -->
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sugarfield</title>
    <link rel="icon" type="image/png" href="/favicon.png" size="64x64" />
    <link href="https://fonts.googleapis.com/css2?family=Lato:wght@300;400;700&display=swap" rel="stylesheet">
    <link href="https://unpkg.com/tailwindcss@^1.0/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css">
    <link rel="stylesheet" href="/css/app.css">
    <title>Document</title>
</head>

<body>
    <nav>
        <div class="container mx-auto flex items-center justify-between py-4">
            <div>
                <a href="/"> <img class="w-max h-12" src="/img/logo.svg" alt="logo"></a>
            </div>
            <div>
                <ul class="flex items-center">
                    <li class="ml-2 md:ml-6 nav-item"><a class="text-sm md:text-lg" href="/">Home</a></li>
                    <li class="ml-2 md:ml-6 nav-item"><a class="text-sm md:text-lg" href="/#menu">Menu</a></li>
                    <% if(user) {%>
                        <li class="ml-2 md:ml-6 nav-item"><a class="text-sm md:text-lg" href="/customer/orders">Orders</a></li>
                        <li class="ml-2 md:ml-6 nav-item">
                            <form id="logout" action="/logout" method="POST">
                                <a class="text-sm md:text-lg" onClick="document.getElementById('logout').submit()" href="#">Logout</a>
                            </form>
                        </li>
                        <%} else { %>
                            <li class="ml-2 md:ml-6 nav-item"><a class="text-sm md:text-lg" href="/login">Login</a></li>
                            <%}%>
                                <li class="ml-2 md:ml-6 nav-item">
                                    <a href="/cart" class="inline-block pl-4 pr-6 py-2 rounded-full">
                                        <img src="/img/cart.png" alt="cart">
                                        <span id="cartCounter" class="text-white text-md font-bold pl-2"><%= session.cart ? session.cart.totalQty : ''%></span>
                                    </a>
                                </li>

                </ul>
            </div>
        </div>
    </nav>
    <%- body %>

        <footer class="conatiner mx-auto py-12">
            <div class="grid grid-cols-1 md:grid-cols-2 justify-items-center">
                <div class="pb-2">
                    <ul class="flex items-center">
                        <li class="ml-2 md:ml-6 text-lg"><a href="/">Home</a></li>
                        <li class="ml-2 md:ml-6 text-lg"><a href="#">About</a></li>
                        <li class="ml-2 md:ml-6 text-lg"><a href="/#menu">Menu</a></li>
                        <% if(!user) {%>
                            <li class="ml-2 md:ml-6 text-lg"><a href="/login">Login</a></li>
                            <%}%>
                                <li class="ml-2 md:ml-6 text-lg"><a href="/cart">Cart</a></li>

                    </ul>
                </div>
                <div class="social pb-2">
                    <ul class="flex items-center">
                        <li class="ml-2 md:ml-6 text-2xl"><a href="#"><i class="lab la-facebook-f"></i></a></li>
                        <li class="ml-2 md:ml-6 text-2xl"><a href="#"><i class="lab la-google-plus-g"></i></a></li>
                        <li class="ml-2 md:ml-6 text-2xl"><a href="#"><i class="lab la-twitter"></i></a></li>
                        <li class="ml-2 md:ml-6 text-2xl"><a href="#"><i class="lab la-instagram"></i></a></li>
                    </ul>
                </div>
            </div>
            <div class="grid items-center justify-items-center pt-8">
                <p class="px-8">
                    This webpage was created by the students of Jai Narain College of Technology for their Minor Project.
                </p>
                <p class="px-8">
                    Build with <i class="las la-heart" style="color: #ea0000; padding: 0 3px;"></i> in the beautiful city of Lakes, Bhopal, December 2020.
                </p>
                <p class="px-8 pt-4">&copy; copyright 2020.</p>
            </div>
        </footer>
</body>
<script src="https://cdn.jsdelivr.net/gh/cferdinandi/smooth-scroll@15.0.0/dist/smooth-scroll.polyfills.min.js"></script>
<script src="/socket.io/socket.io.js"></script>
<script src="/js/app.js"></script>
<!-- Stickey navbar -->
<script type="text/javascript">
    window.addEventListener("scroll", () => {
        const navbar = document.querySelector("nav");
        navbar.classList.toggle("sticky", window.scrollY > 80);
    })
</script>

</html>