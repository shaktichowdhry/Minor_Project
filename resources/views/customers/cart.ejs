<section class="cart py-16 min-h-screen">
    <% if(session.cart) {%>
        <div class="order container mx-auto xl:w-1/2">
            <div class="flex items-center border-b border-gray-300  pb-4">
                <img src="/img/cart-black.png" alt="cart-black">
                <h1 class="font-bold ml-4 text-2xl">Order summary</h1>
            </div>
            <!-- wrapper -->
            <div class="cake-list">
                <% for(let cake of Object.values(session.cart.items) ) {%>
                    <div class="cart-card flex items-center my-8">
                        <img id="card-image" class="w-24" src="/img/<%= cake.item.image%>" alt="itemImage">
                        <div class="flex-1 ml-4 justify-items-center">
                            <h1>
                                <%= cake.item.name%>
                            </h1>
                            <span><%= cake.item.size%></span>
                            <!-- <div>
                                <button onclick="" class=" btn-secondary px-3 py-1 rounded-full text-white font-bold mt-6">
                                    Remove
                                </button>
                            </div> -->
                        </div>
                        <span class="flex-1 pl-2"><%= cake.qty%> Pcs</span>
                        <span class="font-bold text-lg pl-2">‚Çπ <%= cake.item.price * cake.qty %></span>
                    </div>
                    <%}%>
            </div>
            <hr>
            <div class="text-right py-4">
                <div class="">
                    <span class="text-lg font-bold ">Total Amount:</span>
                    <span class="amount text-2xl font-bold ml-2">‚Çπ <%= session.cart.totalPrice %></span>
                </div>
                <% if(user) {%>
                    <div>
                        <form action="/orders" method="POST" class="mt-12">
                            <input name="phone" type="tel" class="border border-gray-400 p-2 w-1/2 mb-4" placeholder="Phone number">
                            <input name="address" type="text" class="border border-gray-400 p-2 w-1/2 mb-4" placeholder="Address">
                            <div>
                                <button type="submit" class="btn-primary px-6 py-2 rounded-full text-white font-bold ">Order Now</button>
                            </div>
                        </form>
                    </div>
                    <%} else {%>
                        <a href="/login" class="inline-block cursor-pointer btn-primary px-6 py-2 rounded-full text-white font-bold mt-6">Login to continue</a>
                        <%}%>
                            <p class="pt-4 font-bold text-2xl">
                                ------ OR -------
                            </p>
                            <a href="/#menu" class="inline-block cursor-pointer btn-primary px-6 py-2 rounded-full text-white font-bold mt-6">Continue Shopping</a>
            </div>
        </div>
        <% } else {%>
            <div class="empty-cart py-16">
                <div class="container mx-auto text-center">
                    <h1 class="text-3xl font-bold mb-2">Cart Empty üôÅ</h1>
                    <p class="text-gray-500 text-lg mb-12">You probably haven't ordered a cake yet. <br>To order a cake, go to the main page.
                    </p>
                    <img class="w-2/5 mx-auto" src="/img/empty-cart.png" alt="emptyCart">
                    <a href="/" class="inline-block px-6 py-2 rounded-full btn-primary text-white font-bold mt-12">Go back</a>
                </div>
            </div>
            <% }%>
</section>