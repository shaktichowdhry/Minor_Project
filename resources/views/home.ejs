<!-- Menu -->
<section class="menu-section py-8">
    <div class="menu pt-20 container mx-auto" id="menu">
        <h1 class="text-4xl mb-8 text-center grid uppercase">Cake Menu<span class="justify-self-center underline"></span></h1>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 col-gap-12 row-gap-16 pt-4">
            <% cakes.forEach(function (cake) { %>
                <div class="w-full md:w-64 cake-card">
                    <img class="h-40 mb-4 mt-1 mx-auto" src="/img/<%=cake.image%>" alt="menuItem">
                    <div class="text-center">
                        <h2 class="mb-4 text-lg">
                            <%=cake.name%>
                        </h2>
                        <span class="size py-1 px-4 rounded-full uppercase text-xs"><%=cake.size%></span>
                        <div class="flex item-center justify-around mt-6 mb-2">
                            <span class="font-bold text-lg">â‚¹<%=cake.price%></span>
                            <button data-cake="<%= JSON.stringify(cake) %>" class="add-to-cart py-1 px-6 rounded-full flex items-center font-bold">
                            <span>+</span>
                            <span class="ml-4">Add</span>
                        </button>
                        </div>
                    </div>
                </div>
                <% })%>
        </div>
    </div>
</section>
