<!-- hero -->
<section class="hero py-16">
    <div class="container mx-auto flex items-center justify-between">
        <div class="w-1/2">
            <h6 class="text-lg"><em>Have craving for a cake?</em></h6>
            <h1 class="text-3xl md:text-6xl font-bold">Don't wait !</h1>
            <a href="#menu" class="btn-primary px-6 py-3 rounded-full text-white font-bold mt-4">Order Now</a>
            <!-- <button onclick="window.location.href='#menu'" class="btn-primary px-6 py-2 rounded-full text-white font-bold mt-4">
                Order Now
            </button> -->
        </div>
        <div class="w-1/2">
            <img src="/img/hero1.png" alt="heroImage">
        </div>
    </div>
</section>
<!-- About -->
<section class="about py-8 h-screen">

</section>
<!-- Menu -->
<section class="menu-section py-8">
    <div class="menu container mx-auto" id="menu">
        <h1 class="text-2xl font-bold mb-8">All Cakes</h1>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 col-gap-12 row-gap-16">
            <% cakes.forEach(function (cake) { %>
                <div class="w-full md:w-64 cake-card">
                    <img class="h-40 mb-4 mt-1 mx-auto" src="/img/<%=cake.image%>" alt="menuItem">
                    <div class="text-center">
                        <h2 class="mb-4 text-lg">
                            <%=cake.name%>
                        </h2>
                        <span class="size py-1 px-4 rounded-full uppercase text-xs"><%=cake.size%></span>
                        <div class="flex item-center justify-around mt-6 mb-2">
                            <span class="font-bold text-lg">â‚¹<%=cake.price%></span>
                            <button data-cake="<%= JSON.stringify(cake) %>" class="add-to-cart py-1 px-6 rounded-full flex items-center font-bold">
                            <span>+</span>
                            <span class="ml-4">Add</span>
                        </button>
                        </div>
                    </div>
                </div>
                <% })%>
        </div>
    </div>
</section>

